<Window x:Class="RobotsWindows.CinematicWindow"
        x:Uid="cinematicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotsWindows"
        mc:Ignorable="d"
        
        Title="{DynamicResource gameTitle}"
        ResizeMode="NoResize"
        Height="{Binding Source={StaticResource Settings}, Path=WindowHeight}"
        Width="{Binding Source={StaticResource Settings}, Path=WindowWidth}"
        
        WindowStartupLocation="CenterScreen"
        
        Loaded="Window_Loaded"
        >
    <Grid>
        
    </Grid>
</Window>
